{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "es2015"
    ],
    "noImplicitAny": true,
    "outDir": "./dist",
    "sourceMap": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types/"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "./src/**/*"
  ]
}
